{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mtools",
  "version": "0.0.1",
  "identifier": "com.ggymm.mtools.app",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "frontendDist": "../dist",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "width": 800,
        "height": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
